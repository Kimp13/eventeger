<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextStyle">@style/AppEditTextStyle</item>
        <item name="buttonStyle">@style/AppButtonStyle</item>
        <item name="materialButtonStyle">@style/AppButtonStyle</item>
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="cardViewStyle">@style/AppMaterialCardViewStyle</item>
        <item name="materialCardViewStyle">@style/AppMaterialCardViewStyle</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="AppThemeWithoutActionBar" parent="AppTheme">s
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeWithActionBar" parent="AppTheme">
        <item name="actionBarStyle">@style/AppActionBar</item>
    </style>

    <style name="AppActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/colorPrimaryDark</item>
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>

    <style name="AppToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="background">@color/colorPrimaryDark</item>
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>

    <style name="AppMaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppTextButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTextViewButtonStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">0dp</item>
        <item name="android:letterSpacing">.03</item>
    </style>

    <style name="CreateCommentEditTextStyle" parent="AppEditTextStyle">
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@drawable/edit_text_text_color</item>
        <item name="android:textColorHint">?android:attr/textColorSecondaryInverse</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="AppBottomNavigationView">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="elevation">16dp</item>
        <item name="itemBackground">@drawable/bottom_navigation_ripple</item>
        <item name="itemIconTint">@drawable/bottom_navigation_view_color</item>
        <item name="itemTextColor">@drawable/bottom_navigation_view_color</item>
        <item name="paddingStart">5dp</item>
        <item name="paddingEnd">5dp</item>
    </style>

    <style name="DatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:buttonBarButtonStyle">@style/AppTextButtonStyle</item>
        <item name="android:colorBackground">@color/colorDarkVariant</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="AnnouncementAuthorTextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="AnnouncementAuthorRankTextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>

    <style name="AnnouncementTextTextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>

    <style name="IconTextButton">
        <item name="android:background">@drawable/icon_text_button_background</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="drawableTint">@color/colorPrimary</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
    </style>

    <style name="CommentsHeaderTextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CommentsCountTextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
    </style>

    <style name="ClickableInverseBackground">
        <item name="android:background">@drawable/clickable_background_borderless_inverse</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:popupBackground">@drawable/create_comment_popup_background</item>
    </style>
</resources>