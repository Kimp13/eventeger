<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/inbox_view_holder_background"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/inboxCardImageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/clickable_background_borderless_inverse"
            android:clickable="true"
            android:contentDescription="@string/announcement"
            android:focusable="true"
            android:src="@drawable/ic_baseline_person_pin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/inboxCardAuthorTextView"
            style="@style/AnnouncementAuthorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/inboxCardImageView"
            app:layout_constraintTop_toTopOf="@id/inboxCardImageView" />

        <TextView
            android:id="@+id/inboxCardRankTextView"
            style="@style/AnnouncementAuthorRankTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/inboxCardAuthorTextView"
            app:layout_constraintTop_toBottomOf="@id/inboxCardAuthorTextView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        style="@style/AnnouncementTextTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <TextView
        style="@style/AppTextViewButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expand_text" />

    <TextView
        style="@style/IconTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        app:drawableStartCompat="@drawable/ic_baseline_comment" />
</LinearLayout>